@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>KhachHangLayout</title>
    <!--Bootstrap 4-->
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid text-center">
        <!--NAVIGATION-->
        <!-- <div class="container-fluid"> -->
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #001A2D !important; color: #ffffff;">
            <a class="navbar-brand row" href="#">
                <img src="https://supersports.com.vn/cdn/shop/files/LOGO_SSP_RGB-02.jpg?v=1718952262&width=2082" width="250px" height="70px" class="rounded" />
            </a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mb-2 mb-lg-0 d-flex align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/trangchu" style="color: #ffffff;">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Register" style="color: #ffffff;">Đăng Ký</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/DangNhap" style="color: #ffffff;">Đăng Nhập</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Search" style="color: #ffffff;">Tìm kiếm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/trangchu" style="color: #ffffff;">Khuyến Mãi</a>
                    </li>
                </ul>

                <div class="ml-auto d-flex align-items-center">
                    <a href="/DatHang/XemGioHang" class="position-relative">
                        <img src="https://th.bing.com/th/id/OIP.YYgXL1OvwdmYVLD3U5JiRQAAAA?rs=1&pid=ImgDetMain" alt="Giỏ hàng" style="width: 20px; height: 20px;" />
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @if (Session["ghm"] != null)
                            {
                                var gh = Session["ghm"] as CuaHangTheThao.Models.GioHangmodel;
                                @gh.TongSLHang() }
                            else
                            {
                                @:0
                            }
                        </span>
                    </a>
                </div>
            </div>
            @{
                if (Session["user"] != null)
                {
                    var nd = (CuaHangTheThao.Models.NguoiDung)Session["user"];
                    <span class="nav-link" style="color: #ffffff;">Chào, @nd.ten</span>
                    <a href="/Home/DangXuat" class="btn btn-danger">Đăng Xuất</a>
                }
                else if (Session["admin"] != null)
                {
                    var qtv = (CuaHangTheThao.Models.QuanTriVien)Session["admin"];
                    <span class="nav-link" style="color: #ffffff;">Chào, @qtv.ten_dang_nhap</span>
                    <a href="/Home/DangXuat" class="btn btn-danger">Đăng Xuất</a>
                    <a href="/QuanLy/Index" class="btn btn-primary">Quản Lý</a>
                }
                else
                {
                    <span class="nav-link" style="color: #ffffff;">Chào, Khách</span>
                }
            }
        </nav>


        <!-- </div> -->
        <!--CONTAIN-->
        <div class="row">
            <!-- Danh mục sản phẩm -->
            <div class="col-md-3 card p-3 mb-3" style="background-color: #f8f9fa;">
                <h5 class="card-header" style="background-color: #007bff; color: #ffffff;">Danh Mục Sản Phẩm</h5>
                @Html.Action("MenuCap1", "Home")
            </div>

            <!-- Nội dung chính -->
            <div class="col-md-9" style="background-color: lavender;">
                <div class="container mt-3">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Images/anh1.jpg" class="d-block w-100" alt="Ảnh 1" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/Images/anh2.jpg" class="d-block w-100" alt="Ảnh 2" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/Images/anh3.jpg" class="d-block w-100" alt="Ảnh 3" />
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>



                    <p style="text-align:center; color:red">Hơn 5.000 + sản phẩm được thiết kế và sản xuất tại SUPERSPORTS đang mang đến cho khách hàng sự tin tưởng tuyệt đối.</p>
                    <br />
                    @RenderBody()
                </div>
            </div>
        </div>
        <!--Footer-->
        <div class="row" style="background-color: #343a40; color: white; padding: 20px 0; display: flex; justify-content: space-between; align-items: center;">
            <div style="flex: 1; text-align: left;">
                <p style="margin: 0; text-align:center">CONTACT US</p>
                <p style="margin: 0; text-align: center">140 Lê Trọng Tấn, Phường Sơn Kỳ, Quận Tân Phú, TPHCM</p>
            </div>
            <div style="flex: 1; text-align: center;">
                <p style="margin: 0; text-align: center">TIN TỨC</p>
                <a style="margin: 0; text-align: center;" href="#">KHOẺ CÙNG SUPERSPORTS</a>
            </div>
            <div style="flex: 1; text-align: center;">
                <p style="margin: 0; text-align: center">FANPAGE</p>
                <img class="facebook" style="width:30px; height:30px" src="https://file.hstatic.net/200000174405/file/fb-icon_4154850ef9fa463cb720ddc2fe19beda.png" />
                <img class="tiktok" style="width:30px; height:30px" src="https://file.hstatic.net/200000174405/file/tiktok_0a7a81d9107f44c19da400b2684fabbe.png" />
                <img class="instagram" style="width:30px; height:30px" src="https://file.hstatic.net/200000174405/file/instagram_15038e58ed94464fb3fda58856112270.jpg" />
            </div>
            <div style="flex: 1; text-align: right;">
                <p style="margin: 0; text-align:center">HOTLINE</p>
                <p style="margin: 0; text-align: center">Email: nhom06@gmail.com</p>
                <p style="margin: 0; text-align: center">Phone: (084) 123 456 121</p>
            </div>
        </div>
    </div>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery (required for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6/dist/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
