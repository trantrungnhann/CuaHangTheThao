@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/layout_trangchu.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="box">
        <h2>Đăng Nhập</h2>
        @using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Tên đăng nhập")
                @Html.TextBox("txtname", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Mật khẩu")
                @Html.Password("txtpass", null, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Đăng Nhập</button>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-2">@ViewBag.ErrorMessage</div>
        }
    </div>
</div>
